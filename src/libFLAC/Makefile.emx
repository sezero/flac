# libFLAC: GNU Makefile for OS/2 EMX

CC=gcc
AR=ar
RANLIB=ranlib

OGG_SUPPORT=1
METADATA_SUPPORT=0
ENCODER_SUPPORT=0

INCLUDES=-I. -I./include -I../../include

CFLAGS =-Zmt -O2 -Wall -W
NASMFLAGS=-Iia32/ -f aout -DOBJ_FORMAT_aout

CPPFLAGS=-DHAVE_STDINT_H
CPPFLAGS+= -DFLAC__CPU_IA32 -DFLAC__HAS_NASM -DFLAC__USE_3DNOW -DSIZEOF_VOIDP=4 -DFLAC__ALIGN_MALLOC_DATA
CPPFLAGS+= -DNDEBUG
CPPFLAGS+= -DENABLE_64_BIT_WORDS=0 -DFLAC__HAS_X86INTRIN=0
ifeq ($(OGG_SUPPORT),1)
CPPFLAGS+= -DFLAC__HAS_OGG=1
else
CPPFLAGS+= -DFLAC__HAS_OGG=0
endif
CPPFLAGS+= -DPACKAGE_VERSION=\"1.3.0\"

LIBSTATIC=FLAC.a

COMPILE=$(CC) $(CFLAGS) $(CPPFLAGS) $(INCLUDES)

OBJ=cpu_asm.o lpc_asm.o bitmath.o bitreader.o cpu.o crc.o fixed.o format.o lpc.o md5.o memory.o stream_decoder.o
ifeq ($(OGG_SUPPORT),1)
OBJ+= ogg_decoder_aspect.o ogg_mapping.o
endif
# metadata interfaces:
ifeq ($(METADATA_SUPPORT),1)
CPPFLAGS+= -DFLAC_METADATA_INTERFACES
OBJ+= metadata_object.o metadata_iterators.o
endif
# encoder support:
ifeq ($(ENCODER_SUPPORT),1)
NASMFLAGS+= -DFLAC_INCLUDE_ENCODER
CPPFLAGS+= -DFLAC_INCLUDE_ENCODER
OBJ+= fixed_asm.o bitwriter.o stream_encoder.o stream_encoder_framing.o window.o
ifeq ($(OGG_SUPPORT),1)
OBJ+= ogg_helper.o ogg_encoder_aspect.o
endif
endif

all: $(LIBSTATIC)

$(LIBSTATIC): $(OBJ)
	$(AR) cru $@ $(OBJ)
	$(RANLIB) $@

%.o: %.c
	$(COMPILE) -c -o $@ $<

%.o: ia32/%.nasm
	nasm $(NASMFLAGS) -o $@ $<
